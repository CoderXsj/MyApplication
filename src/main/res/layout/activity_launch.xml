<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_launch_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/launch_bg" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_launch_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <Button
        android:alpha="0"
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:background="@drawable/sp_launch_btn_bg"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="立即体验"
        android:textColor="#fff" />

    <com.cydai.cncx.widget.IndicatorView
        android:id="@+id/idv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        app:indicator_size="@dimen/x12" />

</RelativeLayout>