<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/iv_close_message"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="11dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_del" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sp_order_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_title_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:paddingTop="7dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_order_header" />

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:textColor="#c9c1ec"
                android:textSize="26px" />

            <TextView
                android:id="@+id/tv_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_order_status"
                android:layout_alignBottom="@+id/tv_order_status"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/iv_icon"
                android:layout_toRightOf="@+id/iv_icon"
                android:text="2016.6.6"
                android:textColor="#c9c1ec"
                android:textSize="26px" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:background="#504667" />

        <LinearLayout
            android:id="@+id/ll_message_detail"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_above="@+id/tv_message_prompt"
            android:layout_below="@+id/rl_title_top"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_src" />

            <TextView
                android:id="@+id/tv_from_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="武汉"
                android:textColor="#c9c1ec"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:src="@mipmap/ic_to_line" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_dest" />

            <TextView
                android:id="@+id/tv_dest_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="武汉"
                android:textColor="#c9c1ec"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#504667" />

        <TextView
            android:id="@+id/tv_message_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textSize="26px" />
    </LinearLayout>
</RelativeLayout>